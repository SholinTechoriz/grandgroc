<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    tools:context=".ui.fragment.UserProfileFragment">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background">


        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tabroundshapebtn"
            android:backgroundTint="@color/colorUltraLightGreen"
            android:padding="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:id="@+id/rlImgSec"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivEmpImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_profile"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_overlay="false"
                    app:civ_border_width="3dp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/mainUName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlImgSec"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/muli_semi_bold_italic"
                android:text="Boy1"
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mainULocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mainUName"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/muli_semi_bold_italic"
                android:text="Kozhikode"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlImgSec"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="-40dp"
                android:layout_toEndOf="@+id/rlImgSec"
                android:contentDescription="@string/contentDesp"
                android:src="@drawable/ic_camera_white"
                android:visibility="gone"
                app:fabSize="mini" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlHeader"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp">

            <ScrollView
                android:id="@+id/svEmpView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rlprofileEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="100dp"
                    android:padding="20dp">

                    <RelativeLayout
                        android:id="@+id/rlUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp"
                            android:contentDescription="@string/contentDesp"
                            android:src="@drawable/ic_user__profile_"
                            app:tint="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/edUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/img1"
                            android:background="@drawable/roundshapebtn"
                            android:backgroundTint="@color/colorUltraLightGreen"
                            android:fontFamily="@font/muli_semi_bold_italic"
                            android:hint="Username"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="textEmailAddress"
                            android:padding="8dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rlLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rlUserName"
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp"
                            android:contentDescription="@string/contentDesp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/edLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_toEndOf="@id/img2"
                            android:background="@drawable/roundshapebtn"
                            android:backgroundTint="@color/colorUltraLightGreen"
                            android:fontFamily="@font/muli_semi_bold_italic"
                            android:hint="Location"
                            android:importantForAutofill="no"
                            android:inputType="textAutoComplete"
                            android:padding="8dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rlLocation"
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp"
                            android:contentDescription="@string/contentDesp"
                            android:src="@drawable/ic_email"
                            app:tint="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/edEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/img3"
                            android:background="@drawable/roundshapebtn"
                            android:backgroundTint="@color/colorUltraLightGreen"
                            android:fontFamily="@font/muli_semi_bold_italic"
                            android:hint="@string/email"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="textEmailAddress"
                            android:padding="8dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rlEmail"
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp"
                            android:contentDescription="@string/contentDesp"
                            android:src="@drawable/ic_phone"
                            app:tint="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/edPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/img4"
                            android:background="@drawable/roundshapebtn"
                            android:backgroundTint="@color/colorUltraLightGreen"
                            android:fontFamily="@font/muli_semi_bold_italic"
                            android:hint="Phone"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="phone"
                            android:padding="8dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rlPhone"
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp"
                            android:contentDescription="@string/contentDesp"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/edDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/img5"
                            android:background="@drawable/roundshapebtn"
                            android:backgroundTint="@color/colorUltraLightGreen"
                            android:fontFamily="@font/muli_semi_bold_italic"
                            android:hint="Date"
                            android:importantForAutofill="no"
                            android:inputType="date"
                            android:maxLength="10"
                            android:padding="8dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlEmpCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rlDate"
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp"
                            android:contentDescription="@string/contentDesp"
                            android:src="@drawable/ic_bar_code"
                            app:tint="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/edEmpCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/img6"
                            android:background="@drawable/roundshapebtn"
                            android:backgroundTint="@color/colorUltraLightGreen"
                            android:fontFamily="@font/muli_semi_bold_italic"
                            android:hint="Code"
                            android:importantForAutofill="no"
                            android:inputType="none"
                            android:padding="8dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tvChangePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rlEmpCode"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="6dp"
                        android:fontFamily="@font/muli_semi_bold_italic"
                        android:padding="5dp"
                        android:text="change_password"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvChangePassword"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25sp"
                        android:background="@drawable/roundshapebtn"
                        android:fontFamily="@font/muli_semi_bold_italic"
                        android:text="Edit"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lLoading"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <ProgressBar
            android:id="@+id/loadingProgress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvWait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="@string/wait_for_a_moment"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>